<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/original_title"
        android:text="Original Title"
        android:background="#292929"
        android:textColor="#fff"
        android:textSize="20sp"
        android:padding="15dp"
        android:gravity="center"
        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/poster_thumbnail"
        android:layout_below="@id/original_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:src="@android:mipmap/sym_def_app_icon"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/poster_thumbnail"
        android:layout_below="@id/original_title"
        android:layout_marginTop="30dp"
        android:text="Release Date"
        android:textColor="#000"
        android:id="@+id/date"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_toRightOf="@id/poster_thumbnail"
        android:layout_below="@id/date"
        android:id="@+id/rate_star"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rate_star"
        android:layout_below="@id/date"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Rate"
        android:textColor="#000"
        android:id="@+id/vote"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/rate_star"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_remove"
        android:layout_below="@id/rate_star"
        android:layout_toRightOf="@id/poster_thumbnail"
        android:layout_marginTop="10dp"
        android:background="#73b432"
        android:onClick="AddOrRemove"
        android:textColor="#fff"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/poster_thumbnail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="30dp"
        android:text="overview"
        android:textColor="#000"
        android:textSize="10sp"
        android:id="@+id/over_view"
        />



</RelativeLayout>